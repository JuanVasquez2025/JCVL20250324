@model JCVL20250324.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "Crear";
}

<h1 class="justify-content-center">Crear Marca</h1>


<hr class="bg-primary" style="height: 2px;" />
<div class="row justify-content-center">


    <div class="col-md-6">
        <form asp-action="Create" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group mb-3">
                <label asp-for="BrandName" class="form-label fw-bold"></label>
                <input asp-for="BrandName" class="form-control" placeholder="Ingresa el nombre de la marca" />
                <span asp-validation-for="BrandName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Country" class="form-label fw-bold"></label>
                <input asp-for="Country" class="form-control" placeholder="Ingresa el pais de origen" />
                <span asp-validation-for="Country" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
