@model JCVL20250324.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h1 class="display-4 text-danger"><i class="fas fa-user-times"></i> Eliminar Usuario</h1>
    <hr class="bg-danger" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="shadow p-4 rounded bg-light">
                <h3 class="text-center">¿Estás seguro de que deseas eliminar este usuario?</h3>

                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Nombre de Usuario</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                    <dt class="col-sm-4 fw-bold">Correo Electrónico</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold">Contraseña</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                    <dt class="col-sm-4 fw-bold">Rol</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>