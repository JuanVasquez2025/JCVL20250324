@model JCVL20250324.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <h1 class="display-4 text-primary"><i class="fas fa-user-edit"></i> Editar Usuario</h1>
    <hr class="bg-primary" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label fw-bold">Nombre de Usuario</label>
                    <input asp-for="Username" class="form-control" placeholder="Ingresa el nombre de usuario" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>


                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Ejemplo: usuario@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Rol</label>
                    <select asp-for="Role" class="form-control">
                        <option value="">Seleccionar Rol</option>
                        <option value="ADMINISTRADOR">ADMINISTRADOR</option>
                        <option value="GERENTE">GERENTE</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary w-50">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
