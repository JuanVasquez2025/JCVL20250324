@model JCVL20250324.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-4">
    <h1 class="display-4 text-success"><i class="fas fa-user-plus"></i> Crear Usuario</h1>
    <hr class="bg-success" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label fw-bold">Nombre de Usuario</label>
                    <input asp-for="Username" class="form-control" placeholder="Ingresa el nombre de usuario" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmarPassword" class="form-label fw-bold">Confirmar Contraseña</label>
                    <input asp-for="ConfirmarPassword" class="form-control" placeholder="Confirma la contraseña" />
                    <span asp-validation-for="ConfirmarPassword" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Rol</label>
                    <select asp-for="Role" class="form-control">
                        <option value="">Seleccionar Rol</option>
                        <option value="ADMINISTRADOR">ADMINISTRADOR</option>
                        <option value="GERENTE">GERENTE</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="form-label fw-bold"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notas sobre el almacén"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success w-50"><i class="fas fa-save"></i> Crear</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}