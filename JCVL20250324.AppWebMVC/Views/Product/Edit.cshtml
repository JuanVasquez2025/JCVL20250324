@model JCVL20250324.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <h1 class="display-4 text-primary"><i class="fas fa-edit"></i> Editar Producto</h1>
    <hr class="bg-primary" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="ProductName" class="form-label fw-bold">Nombre del Producto</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Ingresa el nombre del producto" />
                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ingresa la descripción del producto"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Precio -->
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Precio</label>
                    <input asp-for="Price" class="form-control" placeholder="Ingresa el precio" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="PurchasePrice" class="form-label fw-bold">Precio</label>
                    <input asp-for="PurchasePrice" class="form-control" placeholder="Precio que se vende" />
                    <span asp-validation-for="PurchasePrice" class="text-danger small"></span>
                </div>

                <!-- Bodega (Dropdown) -->
                <div class="form-group mb-3">
                    <label asp-for="WarehouseId" class="form-label fw-bold">Bodega</label>
                    <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId">
                        <option value="">Seleccionar Bodega</option>
                    </select>
                    <span asp-validation-for="WarehouseId" class="text-danger small"></span>
                </div>

                <!-- Marca (Dropdown) -->
                <div class="form-group mb-3">
                    <label asp-for="BrandId" class="form-label fw-bold">Marca</label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId">
                        <option value="">Seleccionar Marca</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary w-50">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary"></i> Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}