@model JCVL20250324.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h1 class="display-4 text-info"><i class="fas fa-info-circle"></i> Detalles del Producto</h1>
    <hr class="bg-info" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="shadow p-4 rounded bg-light">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Nombre del Producto</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                    <dt class="col-sm-4 fw-bold">Descripción</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-4 fw-bold">Precio</dt>
                    <dd class="col-sm-8">@String.Format("{0:C}", Model.Price)</dd>

                    <dt class="col-sm-4 fw-bold">Precio de compra</dt>
                    <dd class="col-sm-8">@String.Format("{0:C}", Model.PurchasePrice)</dd>

                    <dt class="col-sm-4 fw-bold">Marca</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand.BrandName)</dd>

                    <dt class="col-sm-4 fw-bold">Bodega</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Warehouse.WarehouseName)</dd>
                </dl>

                <div class="text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>