@model JCVL20250324.AppWebMVC.Models.Warehouse

<div class="container mt-4">
    <h1 class="mb-4 text-center text-danger"><i class="fas fa-trash-alt"></i> Eliminar Almacén</h1>
    <div class="card shadow-lg p-4 border-danger">
        <h3 class="text-center">¿Está seguro de que desea eliminar este almacén?</h3>
        <dl class="row">
            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.WarehouseName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.WarehouseName)</dd>
            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Notes)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>