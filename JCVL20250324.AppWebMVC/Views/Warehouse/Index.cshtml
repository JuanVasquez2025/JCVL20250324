@model IEnumerable<JCVL20250324.AppWebMVC.Models.Warehouse>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center justify-content-center">
    <h1 class="text-black  mt-4">Bodegas</h1>

</div>

<px|>
    <a asp-action="Create" class="btn btn-success text-center text-white mt-3">Crear Nueva Bodega</a>
</px|>

<table class="table table-striped table-hover mt-5" id="myTable">
    <thead class=" table-dark text-white text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WarehouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WarehouseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

                <td class="text-center">
                    <a class="btn btn-outline-success " asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-outline-info " asp-action="Details" asp-route-id="@item.Id"> Detalles</a>
                    <a class="btn btn-outline-danger " asp-action="Delete" asp-route-id="@item.Id">Eliminar </a>
                </td>
            </tr>
        }
    </tbody>
</table>

