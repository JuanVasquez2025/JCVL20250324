@model JCVL20250324.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Crear Almacén";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center text-success"><i class="fas fa-plus-circle"></i> Crear Nuevo Almacén</h1>
    <div class="card shadow-lg p-4 border-success">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="mb-3">
                <label asp-for="WarehouseName" class="form-label fw-bold"></label>
                <input asp-for="WarehouseName" class="form-control" placeholder="Ingrese el nombre del almacén" />
                <span asp-validation-for="WarehouseName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label fw-bold"></label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notas sobre el almacén"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Crear</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}